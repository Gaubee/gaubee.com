---
import "../tailwind.css";
import { ClientRouter } from "astro:transitions";
import "../components/com-youtube-player.ts";
import "../components/com-mix-blend-mode-gradient-text.ts";
import BackToTop from "../components/BackToTop.astro";
import MobileTopbar from "@/components/MobileTopbar.astro";
import type { MarkdownHeading } from "astro";

interface Props {
  title: string;
  headings: MarkdownHeading[];
}

const { title, headings } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="GauBee's personal blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/icon-192x192.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <MobileTopbar headings={headings} className="lg:hidden" />
    <div class="mx-auto grid max-w-4xl grid-cols-1 gap-6 p-4 pb-24">
      <div>
        <a href="/" class="home-link max-lg:hidden">← 返回主页</a>
        <main class="main-content">
          <slot name="main-content" />
        </main>
      </div>
      <aside class="right-sidebar">
        <slot name="right-sidebar" />
      </aside>
    </div>
    <BackToTop />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --c-bg: #f7f7f7;
    --c-text: #111;
    --c-border: #e0e0e0;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: var(--c-bg);
    color: var(--c-text);
  }
  body {
    margin: 0;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .container {
    display: grid;
    grid-template-columns: 1fr;
    max-width: 1024px;
    margin: 0 auto;
    gap: 1.5rem;
    padding: 1rem;
  }

  .home-link {
    display: block;
    margin-bottom: 1rem;
    color: var(--c-text);
    text-decoration: none;
    font-weight: 500;
  }
  .home-link:hover {
    text-decoration: underline;
  }

  @media (min-width: 1024px) {
    .container {
      grid-template-columns: 2.5fr 1fr;
      padding: 2rem;
    }
  }

  .right-sidebar {
    display: none; /* Hidden on mobile by default */
  }

  @media (min-width: 1024px) {
    .right-sidebar {
      display: block; /* Visible on larger screens */
      position: sticky;
      top: 2rem;
      height: 90vh;
    }
  }

  /* Styles for the article content itself */
  .main-content {
    background-color: #ffffff;
    border: 1px solid var(--c-border);
    border-radius: 0.5rem;
    padding: 1rem;
  }

  @media (min-width: 768px) {
    .main-content {
      padding: 2rem 3rem;
    }
  }

  .main-content h1,
  .main-content h2,
  .main-content h3 {
    scroll-margin-top: 2rem; /* Offset for smooth scrolling */
  }

  /* Fix for grid blowout issue where wide content (like code blocks) stretches the layout */
  .container > div:first-child {
    min-width: 0;
  }
</style>
