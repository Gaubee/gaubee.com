---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import EventLayout from '../../layouts/EventLayout.astro';
import PrevNextEvent from '../../components/PrevNextEvent.astro';

export async function getStaticPaths() {
  const posts = await getCollection('events');
  return posts.map(post => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<'events'>;

const post = Astro.props;
const { Content } = await render(post);
---

<EventLayout title={post.data.title || post.id}>
    <article slot="main-content">
        <h1>{post.data.title || post.id}</h1>
        <p>Published on: {new Date(post.data.date).toLocaleDateString()}</p>
        <hr />
        <Content />
    </article>

    <div slot="right-sidebar">
        <PrevNextEvent currentSlug={post.id} />
    </div>
</EventLayout>
