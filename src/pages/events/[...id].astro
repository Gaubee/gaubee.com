---
import { render } from "astro:content";
import ContentLayout from "@/layouts/ContentLayout.astro";
import { getSiteData } from "@/lib/getSiteData";
import { ContentScrollProgress } from "@/components/ContentScrollProgress";

export async function getStaticPaths() {
  const { allEvents } = await getSiteData();
  return allEvents.map((post) => ({
    params: { id: post.id },
  }));
}

const { id } = Astro.params;
if (id === undefined) {
  throw new Error("event-id is required");
}
const { allEvents } = await getSiteData();
const post = allEvents.find((p) => p.id === id);

if (!post) {
  return new Response(null, { status: 404 });
}

if (!post) {
  return new Response(null, { status: 404 });
}

const { Content, headings } = await render(post);

// Manually find prev/next for this page
const currentIndex = allEvents.findIndex((p) => p.id === id);
const prev = allEvents[currentIndex - 1];
const next = allEvents[currentIndex + 1];
const prevEvent = prev
  ? { slug: prev.id, data: { title: prev.data.title } }
  : null;
const nextEvent = next
  ? { slug: next.id, data: { title: next.data.title } }
  : null;
---

<ContentLayout title={post.safeTitle} headings={headings}>
  <article class="prose dark:prose-invert max-w-none">
    <ContentScrollProgress />
    <Content />
  </article>
</ContentLayout>
