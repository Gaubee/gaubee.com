{
  "name": "@gaubee/blog",
  "scripts": {
    "lint": "markdownlint \"src/**/*.md\"",
    "eleventy": "eleventy",
    "html": "html-minifier-terser --config-file=.html-minifier.json --input-dir=docs --output-dir=docs --file-ext=html",
    "css": "postcss src/_css/main.css --output docs/_css/main.css && postcss src/_css/events.css --output docs/_css/events.css",
    "js": "shx mkdir -p docs/_js && terser src/_js/main.mjs -cm --module -o docs/_js/main.mjs",
    "json": "json-minify src/.webmanifest > docs/.webmanifest",
    "xml": "minify-xml --in-place docs/sitemap.xml && minify-xml --in-place docs/articles.atom && minify-xml --in-place docs/events.atom",
    "init-sw": "workbox wizard",
    "sw": "workbox generateSW workbox-config-v6.js",
    "copy-js": "shx cp ./node_modules/dark-mode-toggle/dist/dark-mode-toggle.min.mjs docs/_js/dark-mode-toggle.mjs && esbuild --bundle src/_ts/time-elements/index.ts --minify --tree-shaking=true --format=esm --outfile=docs/_js/time-elements.mjs",
    "img-video-dimensions": "node add-image-and-video-dimensions.js",
    "clean": "shx rm -rf -- docs",
    "build": "npm run clean && npm run css && npm run js && npm run json && npm run copy-js && npm run eleventy && npm run sw && npm run xml && npm run html",
    "watch": "npm run build && npx eleventy --watch",
    "serve": "npm start",
    "debug": "DEBUG=* npx eleventy",
    "start": "superstatic --port=9001",
    "deploy": "firebase deploy",
    "ci": "npm run lint && npm run build",
    "bd": "npx @11ty/eleventy --input=. --output=docs"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@browser-logos/chrome": "^1.0.18",
    "@browser-logos/firefox": "^3.0.9",
    "@browser-logos/safari": "^2.1.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.13",
    "dark-mode-toggle": "^0.10.0",
    "esbuild": "^0.14.6",
    "firebase-tools": "^9.23.3",
    "get-video-dimensions": "^1.0.0",
    "glob": "^7.2.0",
    "he": "^1.2.0",
    "html-minifier-terser": "^7.0.0-alpha.1",
    "husky": "^7.0.4",
    "image-size": "^1.0.0",
    "json-minify": "^1.0.0",
    "lint-staged": "^12.1.3",
    "luxon": "^2.2.0",
    "markdown-it": "^12.3.0",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-attrs": "^4.1.1",
    "markdown-it-container": "^3.0.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-multimd-table": "^4.1.1",
    "markdown-link-check": "^3.9.0",
    "markdownlint-cli": "^0.30.0",
    "minify-xml": "^3.3.1",
    "post-npm-install": "^2.0.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-custom-properties": "^12.0.1",
    "shx": "^0.3.3",
    "superstatic": "^7.1.0",
    "terser": "^5.10.0",
    "time-elements": "^3.0.0",
    "workbox-cli": "^6.4.2"
  }
}
